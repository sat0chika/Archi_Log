%header
= render "main/header"
.Section
  .Section_Box
    .UserInfo
      .UserInfo__icon
        S
        = @icon
      .UserInfo__name
        = @name
        .UserInfo__contents
    .Posts
      .PostsIndex
        投稿一覧
      .NewPosts
        = link_to '新規投稿', new_topic_path
    - @topics.each do |topic|
      .PickUp__ProjectBox
        = link_to topic_path(topic.id), class: "PickUp-Pic" do
          = image_tag topic.image.url
        .PickUp__Text
          = link_to topic_path(topic.id), class: "PickUp" do
            = topic.title
          .PickUp__Text__Letter
            = topic.description
          .SubItems
            -# - if person_signed_in? && current_user.id == topic.person_id
            .SubItems__edit
              = link_to '編集', edit_topic_path(topic.id), method: :get
            .SubItems__detail
              = link_to '詳細', topic_path(topic.id), method: :get
            .SubItems__delete
              = link_to '削除', topic_path(topic.id), method: :delete, data: {confirm: "本当に削除しますか?"}


  .RightSide
    = render "main/runking"