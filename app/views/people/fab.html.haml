%header
= render "main/header"
.Fab
  .FabSection
    = render "introduction"
    .FabSection
      .Section_Box
      - @topics.each do |topic|
        - if person_signed_in? && topic.liked_by?(current_person)
          .PickUp__ProjectBox
            = link_to topic_path(topic.id) do
              = image_tag topic.image.url, class: "PickUp-Pic"
            .PickUp__Text
              = link_to topic_path(topic.id), class: "PickUp" do
                = topic.title
              .PickUp__Text__Letter
                = topic.heading
              .PickUp__Text__Writer
                = topic.person.name


  .RightSide
    = render "main/recommended"

%footer
= render "main/footer"