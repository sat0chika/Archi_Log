%header
= render('main/header')
.Fab
  .Search
  = form_with(url: search_topics_path, local: true, method: :get, class: "search-form") do |f|
    - @topics.each do |topic|
      .PickUp__ProjectBox
        = link_to topic_path(topic.id) do
          = image_tag topic.image.url, class: "PickUp-Pic"
        .PickUp__Text
          = link_to topic_path(topic.id), class: "PickUp" do
            = topic.title
          .PickUp__Text__Letter
            = topic.heading
          .PickUp__Text__Writer
            = topic.person.name

  .RightSide
    = render "main/recommended"

%footer
= render "main/footer"